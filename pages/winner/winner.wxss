.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}
@keyframes blink {
  0% { opacity: 1;}
  50% {opacity: 0.5;}
  100% {opacity: 1;}
}
@font-face {
  font-family:'HanaleiFill' ;
  src: url('https://fonts.googlefonts.cn/css?family=Hanalei+Fill') format('opentype');
}
.artfont {
  font-family:Arial, Helvetica, sans-serif;
  animation: blink 3s infinite;
  font-size: 70px;
  color:red;
  -webkit-text-stroke-width: 2px;
  -webkit-text-stroke-color: #FFD700;
}
.button.active {
  background-color: gold;
  /* 添加其他样式属性 */
}
.my-view {
  height: 100px;
}
.container {
  background-image: url('https://s1.imagehub.cc/images/2023/09/18/eda6f94f7e355a790cf2600d52a1991.png');
  background-size: auto 100%;
  background-repeat: no-repeat;
  background-position: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.view2{
  font-size: 40px;
  height: 150%;
  width: 120%;
}
